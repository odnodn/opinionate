{{#if (isEntity)}}<h2>{{name}} List</h2>

<div class="form-container">
  <a class="actions" color="primary" aria-label="Add a new record" matTooltip="Add a new record" matTooltipPosition="above" routerLink="/{{toLowerCase name}}/"><mat-icon>add</mat-icon>Add</a>
</div>

<mat-table #{{name}}Table [dataSource]="dataSource" matSort>
{{#each fields}}{{#if (isField)}}  <ng-container matColumnDef="{{name}}">
    <mat-header-cell *matHeaderCellDef mat-sort-header>{{name}}</mat-header-cell>
    <mat-cell *matCellDef="let {{toLowerCase ../name}}">
    {{!-- {{~#ifCond name "===" "id"}}<a routerLink="/{{toLowerCase ../name}}/\{{ {{~toLowerCase ../name}}.nodeId}}">\{{ {{~toLowerCase ../name}}.{{name~}} }}</a>{{~else}} --}}
    {{~#ifCond type "===" "Boolean"}}<mat-checkbox [disabled]="true" [ngModel]="{{toLowerCase ../name}}.{{name}}"></mat-checkbox>{{else}}\{{ {{~toLowerCase ../name}}.{{name~}} }}
    {{~/ifCond}}</mat-cell>
  </ng-container>
{{/if}}{{/each}}
  {{!-- <ng-container matColumnDef="actions">
    <mat-header-cell *matHeaderCellDef>Actions</mat-header-cell>
    <mat-cell *matCellDef="let {{toLowerCase name}}" (click)="$event.stopPropagation()">
      <button mat-icon-button color="warn" aria-label="Delete this record" matTooltip="Delete this record" matTooltipPosition="above" (click)="delete({{toLowerCase name}})">
        <mat-icon>delete</mat-icon>
      </button>
    </mat-cell>
  </ng-container> --}}

  <mat-header-row *matHeaderRowDef="displayedColumns"></mat-header-row>
  <mat-row *matRowDef="let row; columns: displayedColumns;" (click)="goto(row.nodeId)"></mat-row>
</mat-table>

<mat-paginator #paginator
  [pageSize]="10"
  [pageSizeOptions]="[5, 10, 20, 40, 80]"
  [showFirstLastButtons]="true">
</mat-paginator>
{{/if}}